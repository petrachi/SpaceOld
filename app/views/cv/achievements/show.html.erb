<% if @achievements.present? %>

	<%= container do %>
		<% @achievements.each do |achievement| %>
			<%= row do %>
				<%= two_span do achievement.year end %>
				<%= seven_span do "#{ achievement.activity } - #{ achievement.brief }" end %>
			<% end %>
		<% end %>
	<% end %>

<% else %>
	<%= one_cols_container do %>
		nothing here
	<% end %>
<% end %>