<!DOCTYPE html>
<html>
<head>
	<title>Space</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<%= container :task_bar do %>
		<%= row do %>
			<%= six_span do %>
				<p>
					<%= link_to "Home", root_path %><br/>
					Go To <%= link_to "Space Game", root_url(:subdomain => :game) %><br/>
					Go To <%= link_to "Space Private", root_url(:subdomain => :private) %>
				</p>
			<% end %>
			
			<%= six_span :user_info do %>
				<%= render :partial => "layouts/user_info" %>
			<% end %>
		<% end %>
		
		<%= row :flashs do %>
			<%= render :partial => "layouts/flashs" %>
		<% end %>
		
		<%= row do %>
			<%= twelve_span do %>
				<p id="sign_in"></p>
				<p id="sign_up"></p>
			<% end %>
		<% end %>
	<% end %>
	<div class="push"></div>
	
	<%= yield %>
	
</body>
</html>




