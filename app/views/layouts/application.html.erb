<!DOCTYPE html>
<html>
<head>
	<title>Space</title>
	<%= stylesheet_link_tag "application", :media => "all" %>
	
	<%= javascript_include_tag "application" %>
	<%= javascript_tag do "$(document).ready(function(){ #{ resize_push } });".html_safe end if notice or alert %>	
		
	<%= csrf_meta_tags %>
</head>
<body>
	<header>
		<%= container :id => :task_bar, :class => request.subdomain do %>
			<%= row do %>
				<%= render :partial => "layouts/#{ request.subdomain << "/" if request.subdomain.present? }navigation" %>
				<%= render :partial => "layouts/user_info" %>
			<% end %>
		<% end %>
		
		<%= render :partial => "layouts/flashs" %>
		<%= container :id => :sign_forms %>
	</header>
	
	<div id="yield" data-pjax-container>
		<%= hidden_field_tag :notice, notice %>
		<%= hidden_field_tag :alert, alert %>

		<%= yield %>	
	</div>
</body>
</html>




