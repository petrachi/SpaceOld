<!DOCTYPE html>
<html>
	<head>
		<title>Space Game</title>
		<%= stylesheet_link_tag "application", :media => "all" %>	
		<%= javascript_include_tag "application" %>
	
		<%= csrf_meta_tags %>
	</head>
	<body id="game" layout="main">
		<%= one_col_container :element => :header do %>
			<h1><%= link_to t(:'game.name'), root_url %></h1>
		<% end %>
		
		<!-- Flashs -->
		<%= one_col_container :id => :alert do %>
			<%= alert %>
		<% end %>
		
		<%= one_col_container :id => :notice do %>
			<%= notice %>
		<% end %>
		
		<%= yield %>	
	</body>
</html>
