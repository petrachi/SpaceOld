<style>
	/*
	#yield > .container{ border: 2px dashed peachpuff; margin: 3px 0 }
	.container .row{ margin-top: 6px; margin-bottom: 6px; }
	.container .row.nested{ margin-top: 6px; margin-bottom: 6px; }
	*/
	
	#class.gris{ background-color: #f2f2f2; }
	
	#nested .four_span{ background-color: #c0ffff; }
	#nested .four_span .two_span{ background-color: #90ffff; }
	
	#disable_spans{ background-color: #ffc0ff; }
	#disable_spans .two_span{ background-color: #ff90ff; }
	
	#disable_container{ color: #ff0000; }
	
	#disable_double{ color: #ff0000; }
	#disable_double{ background-color: #ffc0ff; }
	#disable_double .two_span{ background-color: #ff90ff; }
	
	
	.yellow{ color: skyblue; }
	.yellow_bg{ background-color: yellow; }
	
	#prepend .two_span{ font-style: italic; background-color: #ffc0c0; }
	#append .three_span{ text-decoration: underline; background-color: #ffc0c0; }
	#prepend_append .two_span{ font-weight: bold; background-color: #ffc0c0; }
	
	#nested_container{ background-color: #c0ffc0; }
	#nested_container .three_span{ background-color: #90ff90; }
	
	#nested_container_span{ background-color: #c0c0ff; }
	#nested_container_span .three_span{ background-color: #9090ff; }
	#nested_container_span .three_span .one_span{ background-color: #6060ff; }
	#nested_container_span .three_span .two_span{ background-color: #6060ff; }
	
	#span_container{ color: #ffffc0; }
	
	#classique_spans .two_span{ background-color: #ffc000; }
	
	#nested_container_spans{ background-color: #ff00c0; }
	#nested_container_spans .two_span{ background-color: #ff0090; }
	
	#nested_container_span_spans{ background-color: #c00000; }
	#nested_container_span_spans .two_span{ background-color: #900000; }
	#nested_container_span_spans .two_span .one_span{ background-color: #600000; }
	#nested_container_span_spans .two_span .two_span{ background-color: #600000; }
	
	#one_row .twelve_span{ box-shadow: 0 0 0 6px rgba(135, 206, 235, 0.2) inset; }
	
	#anticipation .nested [class*=span]{ box-shadow: 0 0 0 6px rgba(0, 0, 0, 0.2) inset; }
	#anticipation .nested .nested [class*=span]{ box-shadow: 0 0 0 6px rgba(255, 0, 0, 0.2) inset; }
	
	#multi_nested .two_span{ background-image: -webkit-repeating-linear-gradient(45deg, transparent 0px, transparent 12px, skyblue 12px, skyblue 24px); }
	#floor .four_span{ background-image:-webkit-linear-gradient(45deg, white , white 50%, black 50%, black) }
	#floor #span_col .four_span{ background-image:-webkit-linear-gradient(45deg, white , white 50%, red 50%, red 60%, black 60%, black) }
	
</style>

<% t = Time.now %>

<%= three_cols_container :id=>"classique", :collection=>@collection do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"class", :collection=>@collection, :class=>"gris" do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"nested", :collection=>@collection, :nested=>:spans do |elt| %>
	<%= two_span do %>
		Class : <%= elt[:name] %>
	<% end %>
	
	<%= two_span do %>
		Detail : <%= elt[:methods] %>
	<% end %>
<% end %>

<%= three_cols_container :id=>"disable_spans", :collection=>@collection, :disable=>:spans do |elt| %>
	<%= two_span do %>
		Class : <%= elt[:name] %>
	<% end %>
	
	<%= two_span do %>
		Detail : <%= elt[:methods] %>
	<% end %>
<% end %>

<%= container :id=>"disable_container" do %>
	<%= three_cols_container :collection=>@collection, :disable=>:container do |elt| %>
		Class : <%= elt[:name] %><br/>
		Detail : <%= elt[:methods] %>
	<% end %>
<% end %>

<%= container :id=>"disable_double" do %>
	<%= three_cols_container :collection=>@collection, :disable=>[:container, :spans] do |elt| %>
		<%= two_span do %>
			Class : <%= elt[:name] %>
		<% end %>
	
		<%= two_span do %>
			Detail : <%= elt[:methods] %>
		<% end %>
	<% end %>
<% end %>

<%= three_cols_container :id=>"spans_options", :collection=>@large_collection, :spans=>{:class=>:yellow_bg} do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"rows_options", :collection=>@large_collection, :rows=>{:class=>:yellow} do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"prepend", :collection=>@collection, :spans=>{:prepend=>2} do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"append", :collection=>@collection, :spans=>{:append=>1} do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= three_cols_container :id=>"prepend_append", :collection=>@collection, :spans=>{:prepend=>1, :append=>1} do |elt| %>
	Class : <%= elt[:name] %><br/>
	Detail : <%= elt[:methods] %>
<% end %>

<%= one_cols_container :disable=>:spans do %>
	
	<%= three_span :id=>:menu do %>
		Menu
	<% end %>
	
	<%= nine_span :id=>:content do %>
		<%= three_cols_container :id=>"nested_container", :collection=>@large_collection do |elt| %>
			Class : <%= elt[:name] %><br/>
			Detail : <%= elt[:methods] %>
		<% end %>
		
		<%= three_cols_container :id=>"nested_container_span", :collection=>@collection, :nested=>:spans do |elt| %>
			<%= one_span do %>
				Class : <%= elt[:name] %>
			<% end %>

			<%= two_span do %>
				Detail : <%= elt[:methods] %>
			<% end %>
		<% end %>
	<% end %>
<% end %>

<%= container :id => "warnings", :prepend => 2, :nested => true do %>
	<%= row :append => 1 do %>
		<%= twelve_span :nested => true do %>
			Warnings
		<% end %>
	<% end %>
<% end %>

<%= container :id=>"span_container" do %>
	<%= two_spans_container :rows=>{:id=>"classique_spans"}, :collection=>@large_collection, :disable=>:container do |elt| %>
		Class : <%= elt[:name] %><br/>
		Detail : <%= elt[:methods] %>
	<% end %>
	
	<%= twelve_span_container :disable=>:spans do %>

		<%= four_span :id=>:menu do %>
			Menu
		<% end %>

		<%= eight_span :id=>:content_spans do %>
			<%= two_spans_container :id=>"nested_container_spans", :collection=>@large_collection do |elt| %>
				Class : <%= elt[:name] %><br/>
				Detail : <%= elt[:methods] %>
			<% end %>

			<%= two_spans_container :id=>"nested_container_span_spans", :collection=>@collection, :nested=>:spans do |elt| %>
			
				<%= one_span do %>
					Class : <%= elt[:name] %>
				<% end %>

				<%= one_span do %>
					Detail : <%= elt[:methods] %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>

<%= container do %>
	<%= one_col_row :id=>:one_row do %>
		shortcut for row > twelve_span
	<% end %>
<% end %>


<%= one_cols_container :id=>:anticipation, :disable=>:spans do %>
	
	<%= three_span :id=>:menu do %>
		Menu
	<% end %>
	
	<%= nine_span :id=>:content do %>
		
		<%= three_cols_container :id=>"nested_container", :collection=>@large_collection do |elt| %>
			Class : <%= elt[:name] %><br/>
			Detail : <%= elt[:methods] %>
		<% end %>
		
		<%= three_cols_container :id=>"nested_container_span", :collection=>@collection, :nested=>:spans do |elt| %>
			<%= one_span do %>
				Class : <%= elt[:name] %>
			<% end %>

			<%= two_span do %>
				Detail : <%= elt[:methods] %>
			<% end %>
		<% end %>
		
	<% end %>
<% end %>

<%= one_col_container :id=>"multi_nested", :nested=>:spans do %>

	<%= four_span :id=>:menu do %>
		Menu
	<% end %>

	<%= eight_span do %>
		<%= two_col_container :collection=>@large_collection do |elt| %>
			
			<%= two_col_container(:collection=>elt.values){ |val| val } %>
			
		<% end %>
	<% end %>
<% end %>

<% tf = Time.now - t %>

<%= one_col_container do %>
	page load : <%= tf %>
<% end %>

<%= one_col_container :id=>"floor", :nested=>:spans do %>

	<%= three_span :id=>:menu do %>
		Menu
	<% end %>

	<%= nine_span do %>
		<%= two_cols_container :collection=>@collection do |elt| %>
			<%= elt[:name] %> (<%= elt[:methods] %>)
		<% end %>
		
		<%= four_spans_container :id=>:span_col, :collection=>@collection do |elt| %>
			<%= elt[:name] %> (<%= elt[:methods] %>)
		<% end %>
	<% end %>
<% end %>
