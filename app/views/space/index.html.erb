<%= four_cols_container :collection => @applications do |application| %>
	<h2 align="center">
		<%=t :"#{ application }.name" %>
	</h2>
	
	<p>
		<%=t :"#{ application }.summary" %>
	</p>
	
	<p align="center">
		<% if authorized? application %>
			<%= link_to t(:see), root_url(:subdomain => application), :class => :btn %>
		<% end %>
	</p>
<% end %>
