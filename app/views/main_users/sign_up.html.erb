<style type="text/css">
	#main table{ width: 750px; table-layout: fixed; }
</style>

<style type="text/css">
	#js-merge-form .merge-button{ display: inline-block; padding: 12px 24px; background: -moz-linear-gradient(top, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.4)); border-radius : 4px; border: 1px solid rgba(0,0,0, 0.15); }
	#js-merge-form #merge-init{ background: -moz-linear-gradient(top, #E8E8E8 10%, #D2D2D2); }
	#js-merge-form #merge-loading{ background: -moz-linear-gradient(top, #E8E8E8 10%, #D2D2D2); }
	#js-merge-form #merge-errors{ background: -moz-linear-gradient(top, #dD3C00 10%, #BD2C00); }
	#js-merge-form #merge-bug{ background: -moz-linear-gradient(top, #dD3C00 10%, #BD2C00); }
	#js-merge-form #merge-validate{ background: -moz-linear-gradient(top, #8ADD6D 10%, #60B044); }
	#js-merge-form #merge-save{ background: -moz-linear-gradient(top, #599BDC 10%, #3072B3); }
	
	#js-merge-form.disabled{ opacity: 0.6; }
	/*#js-merge-form.disabled:after{ content: "loading ..."; padding: 12px 24px; background: -moz-linear-gradient(top, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.4)); position: absolute; }*/
</style>

<script type="text/javascript">
	$(document).ready(function() {
		
		jsMergeForm("#main form", "/sign_up");
		initializeQtip("#main form");
		
	});
</script>


<div id="main">
	<%= form_tag do %>
		<%= hidden_field_tag :call, :js %>
	
		<table>
			
			<tr>
				<td>
					<%= label_tag :email, nil, :title=>"bonjour", :class=>"qtip" %>
				</td>
				<td>
					<%= text_field_tag :email %>
				</td>
			</tr>
			
			<tr>
				<td>
					<%= label_tag :password %>
				</td>
				<td>
					<%= password_field_tag :password %>
				</td>
			</tr>
			
			<tr>
				<td>
					<%=	label_tag :password_confirmation %>
				</td>
				<td>
					<%= password_field_tag :password_confirmation %>
				</td>
			</tr>
			
			<tr id="js-merge-form">
				<td colspan="2" id="merge-init">
					Initialization <span class="merge-button">Click</span>
				</td>
				<td colspan="2" id="merge-loading" style="display:none;">
					Vérification du formulaire <span class="merge-button">Click</span>
				</td>
				<td colspan="2" id="merge-errors" style="display:none;">
					Des erreurs se sont cachés dans ce formulaire ! Traquez-les et anéantissez-les ! <span class="merge-button">Click</span>
					<div id="merge-errors-list">
					</div>
				</td>
				<td colspan="2" id="merge-bug" style="display:none;">
					Oops, I did it again ! <span class="merge-button">Click</span>
				</td>
				<td colspan="2" id="merge-validate" style="display:none;">
					Ce formulaire est valide et peut être mergé <span class="merge-button">Click</span>
				</td>
				<td colspan="2" id="merge-save" style="display:none;">
					Êtes-vous sûr de vos informations ? vérifiez juste une petite derniere fois avant de valider... <span class="merge-button">Click</span>
				</td>
			</tr>
		</table>
	<% end %>
</div>


