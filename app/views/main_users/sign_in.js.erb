<% if @valid.blank? %>
	$("#sign_forms").html("<%=j render :template => "main_users/sign_in.html" %>");
<% else %>
	$("#sign_forms").html("");
	<%= reload_flash %>
	<%= reload_user_info %>
	
	if( $("#yield .sign_in").length ){
		$("#yield").html("<%=j render :template => "#{ controller.controller_name }/#{ controller.action_name }.html" %>");
	}
<% end %>

<%= resize_push %>