<%= content_for :red_bar do %>
	<%= decorate @experience.snippet do |snippet| %>
		<%= snippet.reveal %> - <%= link_to t("blog.snippet.raw"), snippet, target: :_blank %>
	<% end %>
<% end %>

<%= container do %>
	<%= row do %>
		<%= twelve_span do %>
			<%= decorate @experience.snippet do |snippet| %>
				<%= snippet.code %>
			<% end %>
		<% end %>
		
		<%= twelve_span do %>
			<%= erb @experience.run %>
		<% end %>
	<% end %>
<% end %>
