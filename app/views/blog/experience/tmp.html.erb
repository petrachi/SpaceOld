<%= one_col_container do %>
	
	<%= scss %q{
		
		svg#runner{
			height: 360px;
			width: 1128px;
			
			border: red 1px solid;
			
			margin: 2em 0;
		}
		
	} %>
	
	<svg id="runner">
		<defs>
	      	<g id="man">
	         	<circle cx="40" cy="30" r="40" style="stroke:black; stroke-width: 1px;fill: #F4F4F4;" />
	         	<circle cx="20" cy="20" r="20" />
	         	<circle cx="60" cy="20" r="15" />
	         	<circle cx="35" cy="20" r="5" style="fill:white"/>
	         	<circle cx="50" cy="20" r="4" style="fill:white" />
	     	</g>
	  	</defs>
		
		<use xlink:href="#man" x="0" y="200">
			<animate attributeName="x" attributeType="XML"
			    fill="restore"
			    from="0" to="900"
			    begin="click" dur="3s"/>
		</use>
		<rect id="ground" y="350" width="100%" height="10" style="fill:green"/>
	</svg>
	
<% end %>
