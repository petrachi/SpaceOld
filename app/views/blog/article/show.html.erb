<%= container_tag do %>
	<%= row_tag do %>
		<%= col_3_tag tag: :sidebar do %>
			<% if @article.serie %>
				<h3><%=t 'blog.article.series.pagination' %></h3>

				<p>
					<%= @article.serie_link_to %><!--
					--><%= @article.paginate %>
				</p>
			<% end %>
			
			<h3><%=t 'blog.article.pool' %></h3>
			
			<p>
				<%= link_to @article.pool, @article.pool_url, :class => :btn %>
			</p>
		<% end %>
		
		<%= col_9_tag tag: :article do %>
			<h2>
				<%= @article.title %>
			</h2>
			
			<%= erb @article.run %>
			
			<%= @article.navigate if @article.serie %>
		<% end %>
	<% end %>
<% end %>
