<%= container_tag do %>
	
	<%= scss %q{
		
		svg#runner{
			height: 360px;
			width: 1128px;
			
			margin: 2em 0;
		}
		
	} %>
	
	<svg id="runner">
		<defs>
	      	<g id="man">
	         	<circle cx="30" cy="20" r="10" style="fill: #fff;" />
				<rect x="25" y="30" width="10" height="40" style="fill: #fff;" />
				
				<rect x="20" y="30" width="4" height="40" transform="rotate(10, 20, 30)" style="fill: #fff;" />
				<rect x="36" y="30" width="4" height="40" transform="rotate(-10, 36, 30)" style="fill: #fff;" />
				
				<rect x="25" y="70" width="4" height="40" style="fill: #fff;" />
				<rect x="31" y="70" width="4" height="40" style="fill: #fff;" />
	     	</g>
	  	</defs>
		
		<use xlink:href="#man" x="0" y="240">
			<animate attributeName="x" attributeType="XML"
			    fill="restore"
			    from="0" to="1128"
			    begin="click" dur="3s"/>
		</use>
		<rect id="ground" y="350" width="100%" height="10" style="fill:green"/>
	</svg>
	
<% end %>
