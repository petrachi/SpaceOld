<%= content_for :red_bar do %>
	<% SnippetDecorator.new(@experience.snippet, self).tap do |snippet| %>
		<%= snippet.reveal %> - <%= link_to t("blog.snippet.raw"), snippet, target: :_blank %>
	<% end %>
<% end %>


<%= container_tag do %>
	<% SnippetDecorator.new(@experience.snippet, self).tap do |snippet| %>
		<%= snippet.code %>
	<% end %>
<% end %>

<%= container_tag do %>
	<%= erb @experience.run %>
<% end %>
