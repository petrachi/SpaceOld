<%= container_3_tag @screencasts do |screencast| %>
	<h2 class="text-center">
		<%= screencast.title %>
	</h2>
	
	<p>
		<%= screencast.summary.html_safe %>
	</p>
	
	<p class="text-center">
		<%= link_to t(:watch), screencast, class: :btn %>
	</p>
<% end %>


<%= Blog::Screencast.pagination(params[:page].to_i, 16) %><hr/>
<%= Paginator.new(self, :page=>params[:page].to_i, :per => 16).paginate(Blog::Screencast.published) %><hr/>
<%= paginate Blog::Screencast.published, :page=>params[:page].to_i, :per => 16 %>