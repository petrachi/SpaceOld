<%= container do %>
	<%= row do %>
		<%= three_span :element => :sidebar do %>
			<% if @screencast.serie %>
				<h3><%=t 'blog.screencast.serie' %></h3>

				<p>
					<% @serie = Blog::Screencast.where(serie: @screencast.serie) %>
					<% @serie.each do |s| %><!--
						--><% if s == @screencast %><!--
							--><span class="btn-disabled">vol <%= s.serial_number %></span><!--
						--><% else %><!--
							--><%= link_to "vol #{s.serial_number}", s, :class => :btn %><!--
						--><% end %><!--
					--><% end %>
				</p>
			<% end %>
			
			
			<h3><%=t 'blog.screencast.pool' %></h3>
		
			<p>
				<%= link_to @screencast.pool, @screencast.pool_url, :class => :btn %>
			</p>
			
			<h3><%=t 'blog.screencast.subscribe_youtube' %></h3>
			
			<script src="https://apis.google.com/js/plusone.js"></script>
			<div class="g-ytsubscribe" data-channelid="UCOYFTIqHc5de50CMJK6s9Rw" data-layout="full" data-theme="default">
			</div>
			
		<% end %>
	
		<%= nine_span :element => :article do %>
			<h2>
				<%= @screencast.title_with_serie %>
			</h2>
			
			<iframe width="840" height="500" src="//www.youtube.com/embed/<%= @screencast.embed %>?rel=0" frameborder="0" allowfullscreen></iframe>
			
			<h3><%= t 'blog.screencast.ressources' %></h3>
			
			<%= erb @screencast.run %>
		<% end %>
	<% end %>
<% end %>
