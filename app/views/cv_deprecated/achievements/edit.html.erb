<script type="text/javascript">
	$(document).ready(function() {
		
		jsMergeForm("#yield form", "/achievements/edit", "/achievements");
		initializeQtip("#yield form");
	});
</script>


<%= container do %>
	<%= form_tag do %>
		<%= hidden_field_tag :call, :js %>
		<%= hidden_field_tag :id, @achievement.id %>
		
		<%= form_row :year, :errors => [:blank, :not_a_number], :default => @achievement.year %>
		<%= form_row :activity, :qtip => "bonjour", :errors => false, :placeholder => "ex: dev web" %>
		<%= form_row :brief %>
	
		<%= js_merge_row %>	
	<% end %>
<% end %>