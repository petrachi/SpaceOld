<%= container do %>
	<%= one_col_row :element => :h2 do %>
		<%= t :'super_user.actions' %>
	<% end %>
	
	<%= two_col_container :collection => @actions, :disable=>[:container, :spans] do |action| %>
		<%= four_span  do %>
			<%= t :"super_user.action_link.#{ action }" %>
		<% end %>
		
		<%= two_span do %>
			<%= link_to t(:go_to), game_url(:action => action), :class => :btn, :display => :inline %>
		<% end %>
	<% end %>
<% end %>